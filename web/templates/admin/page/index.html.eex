<div class="jumbotron">
  <div class="container">
    <h1 class="display-3">Hello, admin!</h1>
  </div>
</div>

<div class="container">
  <h2 class="my-4">現時点での申込み済総席数: <%= Mokou.Entry.total_count() %></h2>
  <h2 class="my-4">現時点での申込み一覧</h2>
  <table class="table">
    <tr>
      <th>#</th>
      <th>色</th>
      <th>登録日時</th>
      <th>なまえ</th>
      <th>Eメールアドレス</th>
      <th>人数</th>
    </tr>
    <%= for entry <- @entries do %>
      <tr>
        <th scope="row"><a href="/admin/entry/<%= entry.id %>"><%= entry.id %></a></th>
        <th scope="row"><%= Mokou.ColorCode.color(entry.id) %></th>
        <td><%= Mokou.DateHelpers.to_string_without_millisecs(entry.inserted_at) %></td>
        <td><%= entry.name %></td>
        <td><%= entry.email %></td>
        <td><%= entry.count %></td>
      </tr>
    <%= end %>
  </table>
</div>
